{{#if addNewPlant}}
  <h1>New Plant</h1>
  <div class="mimea">
    <form>
      <div class="form-group">
        <label for="alias">Alias/name</label> {{input value=alias id="alias"}}
      </div>

      <div class="form-group">
        <label for="image">1st Image</label> {{input value=image id="image"}}
      </div>

      <div class="form-group">
        <label for="image2">2nd Image</label> {{input value=image2 id="image2"}}
      </div>

      <div class="form-group">
        <label for="image3">3rd Image</label> {{input value=image3 id="image3"}}
      </div>

      <div class="form-group">
        <label for="soil">Soil</label> {{input value=soil id="soil"}}
      </div>

      <div class="form-group">
        <label for="climate">Climate</label> {{input value=climate id="climate"}}
      </div>

      <div class="form-group">
        <label for="fertilizers">Fertilizers</label> {{input value=fertilizers id="fertilizers"}}
      </div>

      <div class="form-group">
        <label for="pests">Pests</label> {{input value=pests id="pests"}}
      </div>

      <div class="form-group">
        <label for="markets">Markets</label> {{textarea value=markets id="markets"}}
      </div>
      <button {{action 'savePlant1' plant}}>Save</button>
      <button {{action 'plantnFormHide'}}>Hide</button>
    </form>
  </div>
{{else}}
  <button class= "btn btn-primary"{{action 'plantFormShow'}}>New Plant</button>
{{/if}}
