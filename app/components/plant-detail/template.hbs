  <!-- where the plant name should go -->
  <h1>Alias: {{plant.alias}} </h1>

<!-- Carousel for the top part of plant details  -->

<div class="container">
  <div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
      <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
      <li data-target="#myCarousel" data-slide-to="1"></li>
      <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
      <div class="item active">
        <img src= {{plant.image}} alt= {{plant.alias}} image style="width:100%;">
      </div>

      <div class="item">
        <img src={{plant.image2}} alt= {{plant.alias}} image style="width:100%;">
      </div>

      <div class="item">
        <img src={{plant.image3}} alt= {{plant.alias}} image style="width:100%;">
      </div>
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
      <span class="glyphicon glyphicon-chevron-left"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
      <span class="glyphicon glyphicon-chevron-right"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</div>

<!-- how to plant section -->
<div class="row">
<div class="col-md-6">
<h2 id="how">How to plant:</h2>
  <h3 id="requirements">Requirements</h3>
  <ul>
    <li>Type of soil: {{plant.soil}}</li>
    <li>Type of climate: {{plant.climate}}</li>

  </ul>
</div>

<div class="col-md-6">
  <h4>Extra tips</h4>
  <p>If your practising largescale, we recommend you do the following as they will come to
  help in the long run:</p>
  <p>Use this fertilizers:</p>
  <ul>
    <li>{{plant.fertilizers}}</li>
  </ul>
    <p>And keep watch of the following pests: </p>
<ul>
    <li>{{plant.pests}}</li>
  </ul>
</div>
</div>

<hr>
<!-- available markets section -->
<div class="market">
  <h2>Available markets:</h2>
  <p>Here are the following markets for {{plant.alias}}</p>
  <ul id="soko">
    <li>{{plant.markets}}</li>
  </ul>

</div>

<ul>
  {{#each model as |plant|}}
    {{plant-tile plant=plant}}
    {{/each}}
</ul>
<button class="btn btn-danger" {{action 'delete' plant}}>Delete</button>
